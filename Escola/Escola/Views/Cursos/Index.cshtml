
@model IEnumerable<Escola.Models.Cursos>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-6">
        <h2>
            Lista de Cursos
            <a class="btn btn-success" href="/Cursos/Create">Novo</a>
        </h2>
    </div>

    <div class="col-md-6">
        <h3 class="h3right">
            Total de Cursos: @ViewBag.qtdCursos
        </h3>
    </div>
</div>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Curso</th>
                <th>Habilidade</th>
                <th>Modalidade</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CURSOID</td>
                    <td>@item.CURSODESCRICAO</td>
                    <td>@item.CURSOCODHABILIDADE</td>
                    <td>@item.CURSOMODALIDADE</td>

                    <td>
                        <a href="/Cursos/Exibir?id=@item.CURSOID"><button type="button" class="btn btn-info">Exibir</button> </a>
                        <a href="/Cursos/Editar?id=@item.CURSOID"> <button type="button" class="btn btn-primary">Editar</button> </a>
                        <a href="/Cursos/Excluir?id=@item.CURSOID"> <button type="button" class="btn btn-danger">Excluir</button> </a>
                    </td>
                </tr>
            }

            

        </tbody>
    </table>
</div>