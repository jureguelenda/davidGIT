@model IEnumerable<Escola.Models.Disciplinas>
@{
    ViewBag.Title = "DisciplinaPorCurso";
    var nomeCurso = Model.ToList().First();
}

<div class="row">
    <h2>Dados do Curso</h2>
</div>
<div class="row">
    <table class="table-bordered">
        <tr>
            <td>ID</td>
            <td>Disciplinas</td>
            <td>CH</td>
        </tr>
          @foreach(var item in Model)
            {
                <tr>
                    <td>@item.DISID</td>
                    <td>@item.DISDESCRIACAO</td>
                    <td>@item.DISCH</td>
                </tr>
            }
    </table>
</div>