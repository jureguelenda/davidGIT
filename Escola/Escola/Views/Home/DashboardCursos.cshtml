@model IEnumerable<Escola.Models.GrupoCursoQuantidadeDisciplina>
@{
    ViewBag.Title = "DashboardCursos";
}

<div class="row">
    <h2>Dados do Curso</h2>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <a href="/Cursos/DisciplinaPorCurso?id=@item.codigo">
            <div class="col-md-2 divCursoItemDashboard">
                <div>
                    <h2>@item.quantidade</h2>
                </div>
                <div>
                    @item.descricao
                </div>
            </div>
        </a>
    }

</div>

