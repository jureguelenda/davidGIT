
@{
    ViewBag.Title = "Create";
}

<h2>Cadastro da Vaga</h2>

<div>
    <form action="/Vagas/Create" method="post">
        <div class="form-group">
            <label for="id">ID</label>
            <input type="number" classe="form-crontrol"
                   id="id" name="id"
                   required />
        </div>

        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" classe="form-crontrol"
            maxlength="100" id="nome" name="nome"
                   required />
        </div>

        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text" classe="form-crontrol"
            maxlength="1000" id="descricao" name="descricao"
                   required />
        </div>

        <div class="form-group">
            <label for="atribuicao">Atribuição</label>
            <input type="text" classe="form-crontrol"
            maxlength="100" id="atribuicao" name="atribuicao"
                   required />
        </div>

        <div class="form-group">
            <label for="salario">Salario</label>
            <input type="number" classe="form-crontrol"
            id="salario" name="salario"
                   required />
        </div>

        <div class="form-group">
            <label for="requisito">Requisito</label>
            <input type="text" classe="form-crontrol"
            maxlength="100" id="requisito" name="requisito"
                   required />
        </div>

        <div class="form-group">
            <label for="data">Data</label>
            <input type="datetime" classe="form-crontrol"
            id="data" name="data" 
                   required />
        </div>

        <div>
            <a href="/Vagas/Index"><button type="button" class="btn btn-primary">Voltar</button></a>
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>
    </form>
</div>

