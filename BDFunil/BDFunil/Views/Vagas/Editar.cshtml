@model BDFunil.Models.VAGA
@{
    ViewBag.Title = "Editar";
}

<h2>Editando Area</h2>
<br />
<div>
    <form action="/Vagas/Create" method="post">
        <div class="form-group">
            <label for="id">ID</label>
            <input type="number" classe="form-crontrol"
                   id="id" name="id" value=@Model.VAIID
                   required />
        </div>

        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" classe="form-crontrol"
                   maxlength="100" id="nome" name="nome"
                   value=@Model.VAINOME
                   required />
        </div>

        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text" classe="form-crontrol"
                   maxlength="1000" id="descricao" name="descricao"
                   value=@Model.VAIDESCRICAO
                   required />
        </div>

        <div class="form-group">
            <label for="atribuicao">Atribuição</label>
            <input type="text" classe="form-crontrol"
                   maxlength="100" id="atribuicao" name="atribuicao"
                   value=@Model.VAIATRIBUICAO
                   required />
        </div>

        <div class="form-group">
            <label for="salario">Salario</label>
            <input type="number" classe="form-crontrol"
                   id="salario" name="salario"
                   value=@Model.VAISALARIO
                   required />
        </div>

        <div class="form-group">
            <label for="requisito">Requisito</label>
            <input type="text" classe="form-crontrol"
                   maxlength="100" id="requisito" name="requisito"
                   value=@Model.VAIREQUISITO
                   required />
        </div>

        <div class="form-group">
            <label for="data">Data</label>
            <input type="datetime" classe="form-crontrol"
                   id="data" name="data"
                   value=@Model.VAIDATACADASTRO
                   required />
        </div>

        <div>
            <a href="/Vagas/Index"><button type="button" class="btn btn-primary">Voltar</button></a>
            <button type="submit" class="btn btn-success">Salvar</button>
        </div>
    </form>
</div>

